# 服务器配置
NODE_ENV=development
PORT=27006
HOST=localhost



# 赛程数据源配置
ITTF_API_ENABLED=true
ITTF_API_KEY=your-ittf-api-key
CHINA_TT_API_KEY=your-china-tt-api-key
SYNC_INTERVAL=7200000

# 比赛数据配置
AUTO_SYNC=true
RESULT_UPDATE_INTERVAL=300000
LIVE_SCORE_ENABLED=true
NOTIFICATION_ENABLED=true

# 时区配置
DEFAULT_TIMEZONE=Asia/Shanghai
DISPLAY_TIMEZONES=Asia/Shanghai,UTC,America/New_York,Europe/London

# 缓存配置
CACHE_TTL=3600
LIVE_CACHE_TTL=30
SCHEDULE_CACHE_TTL=86400

# 推送配置
WEBHOOK_URL=http://localhost:27001/api/webhooks/schedule
PUSH_TOPICS=match_start,match_end,score_update

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/schedule-service.log

# CORS配置
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 服务间通信
API_SERVICE_URL=http://localhost:27001
USER_SERVICE_URL=http://localhost:27003
NEWS_SERVICE_URL=http://localhost:27005
